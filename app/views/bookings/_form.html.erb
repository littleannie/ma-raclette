<%= simple_form_for [@raclette, @booking],
                          html: {
                            data: {
                              controller: 'flatpickr'
                          }
                    } do |f| %>
      <%= f.input :date,
              as: :string,
              input_html: {
                data: {
                  flatpickr_target: 'startDateInput',
              } } %>
      <%= f.input :description %>
      <%= f.input :big_eater %>
      <%= f.input :normal_eater %>
      <%= f.input :small_eater %>
      <%= f.button :submit, class: "main-button" %>
    <% end %>
      <div>
        <% if policy(@raclette).destroy? %>
          <%= link_to "Delete",
          raclette_path(@raclette),
          class: "main-button",
          data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet événement ?"} %>
        <% end %>
